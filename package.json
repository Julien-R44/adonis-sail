{
  "name": "adonis-sail",
  "description": "â›µ Generate a ready-to-use docker environment for your Adonis application",
  "version": "0.0.4",
  "license": "MIT",
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "files": [
    "build/stubs",
    "build/commands",
    "build/templates",
    "build/instructions.md"
  ],
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "lint": "eslint . --ext=.ts",
    "pretest": "npm run lint",
    "copyfiles": "copyfiles \"stubs/**/*\" \"instructions.md\" build",
    "test": "node .bin/test.js",
    "clean": "del-cli build",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile && npm run copyfiles",
    "prepublishOnly": "npm run build",
    "format": "prettier --write .",
    "release": "np --message=\"ðŸ”– bumped to %s\"",
    "version": "npm run build"
  },
  "devDependencies": {
    "@adonisjs/core": "^5.4.2",
    "@adonisjs/mrm-preset": "^5.0.2",
    "@adonisjs/require-ts": "^2.0.8",
    "@types/node": "^17.0.5",
    "copyfiles": "^2.4.1",
    "del-cli": "^4.0.1",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-adonis": "^2.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "japa": "^4.0.0",
    "mrm": "^3.0.10",
    "np": "^7.6.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Julien-R44/adonis-sail.git"
  },
  "bugs": {
    "url": "https://github.com/Julien-R44/adonis-sail/issues"
  },
  "homepage": "https://github.com/Julien-R44/adonis-sail#readme",
  "keywords": [
    "adonisjs",
    "adonis5",
    "docker",
    "adonis-sail",
    "docker-compose"
  ],
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptPackage",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "adonisjs": {
    "commands": [
      "adonis-sail/build/commands"
    ]
  },
  "np": {
    "contents": ".",
    "anyBranch": false
  }
}
